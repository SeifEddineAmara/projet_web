{% extends 'baseBack.html.twig' %}


{% block body %}
    <a href="{{ path('app_artiste_index') }}">Afficher Artistes</a>
    <a href="{{ path('app_type_de_musique_index') }}">Afficher Genres</a>

    <h1>Evenements</h1>

    <table class="table">
        <thead>
            <tr>
{#                <th>IdEvenement</th>#}
                <th>NomEvenement</th>
                <th>DateEvenement</th>
                <th>Artiste</th>
                <th>Restaurant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
{#                <td>{{ evenement.idEvenement }}</td>#}
                <td>{{ evenement.nomEvenement }}</td>
                <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.getArtiste() }}</td>
                <td>{{ evenement.getRestaurant() }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'idEvenement': evenement.idEvenement}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'idEvenement': evenement.idEvenement}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
