{% extends 'base.html.twig' %}

{% block title %}Inscription index{% endblock %}

{% block body %}
    <h1>Inscription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdInscription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.idInscription }}</td>
                <td>
                    <a href="{{ path('app_inscription_show', {'idInscription': inscription.idInscription}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-check">Show</i></button></a>
                    <a href="{{ path('app_inscription_edit', {'idInscription': inscription.idInscription}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil">Edit</i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inscription_new') }}">Create new</a>
{% endblock %}
