<form method="post" action="{{ path('app_publication_delete', {'idPublication': publication.idPublication}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.idPublication) }}">
    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i>Delete</button>
</form>
