{% extends 'baseBack.html.twig' %}

{% block title %}Chefs index{% endblock %}

{% block body %}

    <h1>Add Chefs </h1>
    {{ form_start(form) }}
<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <div class="form-group">
            <label for="exampleInputReference1">Rechercher</label>
            {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.nom,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-theme">Search</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
    <table class="table">
        <thead>
            <tr>
                <th>IdChef</th>
                <th>NomChef</th>
                <th>CoursAssocie</th>
                <th>AdresseChef</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chef in chefs %}
            <tr>
                <td>{{ chef.idChef }}</td>
                <td>{{ chef.nomChef }}</td>
                <td>{{ chef.coursAssocie }}</td>
                <td>{{ chef.adresseChef }}</td>
                <td>
                    <a href="{{ path('app_chefs_show', {'idChef': chef.idChef}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-check">show</i></button></a>
                    <a href="{{ path('app_chefs_edit', {'idChef': chef.idChef}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil">edit</i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chefs_new') }}">Create new</a>
{% endblock %}
