{% extends 'baseFront.html.twig' %}

{% block titre %} register {% endblock %}

{% block body %}
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
    <section class="home-slider-loop-false  inner-page owl-carousel">
        <div class="slider-item" style="background-image: url('{{ asset('front/img/hero_2.jpg') }}');">

            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>Register</h1>

                    </div>
                </div>
            </div>

        </div>

    </section>


    <section class="section element-animate">
        <div class="clearfix mb-5 pb-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 text-center heading-wrap">
                        <h2>Get In Touch</h2>
                        <span class="back-text">Contact Form</span>
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Email</label>
                            {{ form_widget(form.email,{'attr': {'class': 'form-control ' , 'placeholder' : 'email'}}) }}
                        </div>
                    </div>

                    <button class="btn btn-primary">{{ button_label|default('REC') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>



{% endblock %}