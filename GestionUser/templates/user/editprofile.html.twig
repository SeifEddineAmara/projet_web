{% extends 'baseFront.html.twig' %}

{% block titre %} edit {% endblock %}

{% block body %}
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
    <section class="home-slider-loop-false  inner-page owl-carousel">
        <div class="slider-item" style="background-image: url('img/hero_2.jpg');">

            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>edit profile</h1>

                    </div>
                </div>
            </div>

        </div>

    </section>


    <section class="section element-animate">
        <div class="clearfix mb-5 pb-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 text-center heading-wrap">
                        <h2>Get In Touch</h2>
                        <span class="back-text">Contact Form</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="row">
                        <div class="col-md-6 form-group ">
                            <label for="name">Name</label>
                            {{ form_widget(form.name,{'attr': {'class': 'form-control ' , 'placeholder' : 'Name'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="phone">Last Name</label>
                            {{ form_widget(form.lastname,{'attr': {'class': 'form-control ' , 'placeholder' : 'Last Name'}}) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Email</label>
                            {{ form_widget(form.email,{'attr': {'class': 'form-control ' , 'placeholder' : 'Email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Password</label>
                            {{ form_widget(form.password,{'attr': {'class': 'form-control ' , 'placeholder' : 'Password'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Gender</label>
                            {{ form_widget(form.gender,{'attr': {'class': 'form-control h-75'}}) }}
                            {{ form_errors(form.gender) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Phone</label>

                            {{ form_widget(form.phone,{'attr': {'class': 'form-control ' , 'placeholder' : 'Phone'}}) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Birthday</label>
                            {{ form_widget(form.birthday,{'attr': {'class': 'form-control '}}) }}
                            {{ form_errors(form.birthday) }}
                        </div>
                    </div>
                    <button class="btn btn-primary">{{ button_label|default('Edit') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>




    </section>



{% endblock %}