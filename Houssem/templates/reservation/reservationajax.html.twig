{% for reservation in reservations %}
    <tr>
        <td>{{ reservation.idReservation }}</td>
        <td>{{ reservation.idUser }}</td>
        <td>{{ reservation.idRestaurant }}</td>
        <td>{{ reservation.idTable.typeTable }}</td>
        <td>{{ reservation.heure }}</td>
        <td>{{ reservation.date }}</td>
        <td>
            <a href="{{ path('app_reservation_show', {'idReservation': reservation.idReservation}) }}"><button type="button" class="btn btn-primary">Show</button></a>
            <a href="{{ path('app_reservation_edit', {'idReservation': reservation.idReservation}) }}"><button type="button" class="btn btn-warning">Edit</button></a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="4">no records found</td>
    </tr>
{% endfor %}