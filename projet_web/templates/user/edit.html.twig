{% extends 'baseBack.html.twig' %}
{% block titre %} Edit User {% endblock %}

{% block body %}
    <h1>Edit User</h1>

    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

                <div class="form-horizontal style-form">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nom</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.name,{'attr': {'class': 'form-control' , 'placeholder' : 'name'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Lastname</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.lastname,{'attr': {'class': 'form-control' , 'placeholder' : 'Lastname'}}) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">email</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.email,{'attr': {'class': 'form-control' , 'placeholder' : 'email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.password,{'attr': {'class': 'form-control' , 'placeholder' : 'password'}}) }}
                            {{ form_errors(form.password) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">gender</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.gender,{'attr': {'class': 'form-control' , 'placeholder' : 'gender'}}) }}
                            {{ form_errors(form.gender) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">phone</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.phone,{'attr': {'class': 'form-control' , 'placeholder' : 'phone'}}) }}
                            {{ form_errors(form.phone) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">birthday</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.birthday,{'attr': {'class': 'form-control' , 'placeholder' : 'birthday'}}) }}
                            {{ form_errors(form.birthday) }}

                        </div>
                    </div>
                    <button class="btn">{{ button_label|default('Save') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endblock %}
